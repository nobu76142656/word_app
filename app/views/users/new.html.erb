<p>新規ユーザー登録</p>
<br>
<table>
  
  <%= form_for(@user) do |f| %>
    <tr>
      <td>名前</td><td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>パスワード</td><td><%= f.password_field :password %>
    </tr>
    <tr>
      <td>パスワード確認</td><td><%= f.password_field :password_confirmation %>
    </tr>
    <tr>
      <td><%= f.submit "  登  録  "%></td>
    </tr>
  <% end %>
</table>